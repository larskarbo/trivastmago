body {
    background: white
}

h1
    font-family: Avenir
    position: absolute
    top: 0
    .red {
        color #007faf
    }
    .two {
        color #f48f00
    }
    .third {
        color #c94a38
    }
    font-size: 80px
    letter-spacing: -3px
    animation-name: trivago;
    animation-duration: 0.6s;
    animation-fill-mode: forwards;
    animation-delay: 1.5s;

    &.tow {
        opacity 0
        animation-name: hotelluft;
        animation-duration: 0.6s;
        animation-fill-mode: forwards;
        animation-delay: 1.5s;
        letter-spacing: -5px
    }

